<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>FurnitureServlet</servlet-name>
        <servlet-class>ch.heigvd.nackeskratta.controllers.FurnituresServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GeneratorServlet</servlet-name>
        <servlet-class>ch.heigvd.nackeskratta.controllers.GeneratorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditorServlet</servlet-name>
        <servlet-class>ch.heigvd.nackeskratta.controllers.EditorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertionServlet</servlet-name>
        <servlet-class>ch.heigvd.nackeskratta.controllers.InsertionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FurnitureServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeneratorServlet</servlet-name>
        <url-pattern>/generator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditorServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertionServlet</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
